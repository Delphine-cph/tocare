<div class="d-flex justify-content-between align-items-center mb-4">
  <h1># Channels</h1>
  <%= link_to "Search", root_path, class: "btn btn-flat" %>
</div>

<% @chatrooms.each do |chatroom| %>
  <div class="channel channel-border mb-3">
    <p><i class="fas fa-hashtag"></i><%= link_to chatroom.name, chatroom_path(chatroom) %></p>
  </div>
<% end %>
