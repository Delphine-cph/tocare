<%= link_to patients_path, class:"arrow mt-0" do %>
  <i class="fas fa-long-arrow-alt-left"></i>
<% end %>

<h2><strong><%= @patient.first_name.capitalize %>  <%= @patient.last_name.upcase %></strong></h2>
<h5><%= @patient.birthday %></h5>


  <div class="card-info-patient p-3">
    <p><i class="fas fa-map-marker-alt"></i> <%= @patient.adress %></p>
    <p><i class="fas fa-mobile-alt"></i> <%= @patient.telephone_number %></p>
    <p><i class="far fa-address-book"></i> <%= @patient.telephone_family %></p>
  </div>

  <div class="card-info-patient mt-4">
    <h4><i class="fas fa-user-nurse"></i></h4>
    <p>Victoria Capin</p>
  </div>

  <div class="card-info-patient">
    <h4><i class="fas fa-business-time"></i></h4>
    <strong></strong> <%= @patient.atcd %>
  </div>

  <div class="card-info-patient">
    <h4><i class="fas fa-allergies">  ALLERGIES : <%= @patient.allergy %></i></h4>
  </div>

  <div class="card-info-patient">
    <h4><i class="fas fa-capsules"></i></h4>
    <ul>
      <li>Amlor 30 (1 - 0 - 1)</li>
      <li>Parac√©tamol 1g ALD</li>
    </ul>
  </div>

  <div class="card-info-patient">
    <h4><i class="fas fa-hand-holding-medical"></i></h4>
    <%= @patient.soin %>
  </div>

  <div class="card-info-patient">

    <h4>DERNIERES TRANSMISSIONS</h4>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Nouvelle Transmission
  </button>
      <%= link_to "Liste Transmission", patient_transmissions_path(@patient), class: "btn btn-primary" %>

</div>
</div>
</div>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@patient, @transmission] do |f| %>
        <%= f.input :content %>
        <%= f.submit %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
