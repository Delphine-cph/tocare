<h4 class= "text-center">Voici le résultat de ta demande</h4>


<div class="card-products">
  <% @replacements.each do |user, replacements| %>
    <div class="card-product">
      <%= image_tag user.photo %>
      <div class="card-product-infos">
        <h2> <%= user.first_name %> </h2>
        <h2> <%= user.last_name %> </h2>
        <p> Arrondissement : <%= user.arrondissement %></p>
        <% replacements.each do |replacement| %>
        <div class="d-flex">
        <p><%= replacement.patient.first_name %></p>
        </div>
        <% end  %>
      </div>
    </div>
  <% end %>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-center mt-5" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Je valide
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bravo ta demande a bien été prise en compte</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class= "p-text">Tu recevras une notification de validation de tes remplaçants </p>
      </div>
      <div class="modal-footer">
        <%= link_to "Faire une autre demande", new_replacement_path, class: "btn btn-primary btn-center my-3" %></div>
        <%= link_to "Retour à l'accueil", root_path, class: "btn btn-primary btn-center my-3" %>
      </div>
    </div>
  </div>
</div>
