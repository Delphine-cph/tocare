<div class="d-flex justify-content-between align-items-center mb-4">
  <h1># Channels</h1>
</div>

<h3>Fils de Discussions</h3>

<% @public_chatrooms.each do |chatroom| %>
  <div class="channel channel-border mb-3">
    <p><i class="fas fa-hashtag"></i><%= link_to chatroom.name, chatroom_path(chatroom) %></p>
  </div>
<% end %>

<h3>Conversations priv√©es</h3>

<% @private_chatrooms.each do |chatroom| %>
  <div class="channel channel-border mb-3">
    <% if chatroom.owner == current_user %>
      <p><%= image_tag chatroom.recipient.photo, class: "avatar" %> <%= link_to chatroom.recipient.first_name.capitalize, chatroom_path(chatroom) %></p>
    <% else %>
      <p><%= image_tag chatroom.owner.photo, class: "avatar" %> <%= link_to chatroom.owner.first_name.capitalize, chatroom_path(chatroom) %></p>
    <% end %>
  </div>
<% end %>
