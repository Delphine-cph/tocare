<% if user_signed_in? %>
  <h1 class ="mb-5">Bonjour <%= current_user.first_name.capitalize %> ! 👋</h1>


    <% if @replacements.empty? %>
      <div class="home-card card-no-dem">
        <div class="rond-circle">
          <div class="home-emoticon">
            🔎
          </div>
        </div>
        <div class="text-center"><strong>Remplacements</strong><br> 0 demandes</div>
        <div class="mb-0 mr-fake-link"><i class="fas fa-angle-right"></i></div>
      </div>
    <% else %>
     <div>
        <div class="home-card card-validation" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <div class="rond-circle">
            <div class="home-emoticon">
              👏
            </div>
          </div>
          <div>
            <strong>Remplacements</strong><br> <strong><%= @replacements.size %></strong> infirmier a validé <br> ta demande !
          </div>
              <div class="mb-0 mr-fake-link"><i class="fas fa-angle-right"></i></div>
        </div>
    </div>
    <% end %>

    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <% @replacements.each do |user, replacements| %>
          <p style="font-size:20px;" data-bs-toggle="modal" data-bs-target="#exampleModal"> 🚀 <strong>Bravo</strong> <strong><%= user.first_name.capitalize %></strong> a accepté votre demande </p>
          <p><%= link_to "Envoyer un message", chatrooms_path(id: user.id), method: :post, class: "btn-message" %></p>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="btn-fermer" data-bs-dismiss="modal">Fermer</div>
      </div>
    </div>
  </div>
</div>


<div class="home-card card-trans">
<div class="rond-circle">
<div class="home-emoticon">
  🩺
</div>
</div>
  <div class="text-center">
    <strong>Transmissions</strong><br> <strong> 15</strong> transmissions</div>
    <div class="mb-0 mr-fake-link"><i class="fas fa-angle-right"></i></div>
</div>

<div class="home-card card-msg">
<div class="rond-circle">
  <div class="home-emoticon">
    💬
  </div>
</div>
    <div>
      <strong>Messages</strong><br> <strong> 1</strong> message</div>
      <div class="mb-0 mr-fake-link"><i class="fas fa-angle-right"></i></div>
</div>

<div class="home-card card-actu">
  <div class="rond-circle">
  <div class="home-emoticon">
    👀
  </div>
  </div>
    <div>
      <strong>Actualités</strong><br>Tu es à jour !</div>
      <div class="mb-0 mr-fake-link"><i class="fas fa-angle-right"></i></div>
  </div>

  <% else %>
    <%= link_to "Login", new_user_session_path %>
  <% end %>
