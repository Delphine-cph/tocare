
<div class="card-product">
  <%= image_tag @user.photo %>
  <div class="card-product-infos">
    <h2><%= @user.first_name.capitalize %> <%= @user.last_name.upcase %></h2>
    <p>IDE depuis 6 ans</p>
  </div>
</div>

<div class="card-user">
  <ul class="mt-4"> <strong>Notation :</strong>
    <% 5.times do %>
      <li class="list-in-line"><i class="fas fa-star"></i></li>
    <% end %>
  </ul>
</div>

<p class="text-center">_________________________________</p>

<div class="container">
  <p><strong>Secteur:</strong> <%= @user.arrondissement %></p>
  <p><strong>Equipe:</strong> Marie A. </p>
  <p><strong>Description:</strong> <%= @user.description %></p>

  <p> <strong>Soins:</strong></p>
  <div class="profile-card-tags">
    <div class="tag-soins">Pansements</div>
    <div class="tag-soins">Toilette</div>
    <div class="tag-soins">Perfusions</div>
  </div>

  <div class="profile-card-tags mt-3">
    <div class="tag-soins">Dialyse péritonéale</div>
    <div class="tag-soins">Glycémie</div>
    <div class="tag-soins">TTT</div>
  </div>
</div>

