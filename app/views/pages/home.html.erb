<% if user_signed_in? %>
  <h1 class ="mb-5">Bonjour <%= current_user.first_name.capitalize %> 👋</h1>



     <div>
        <p class="home-card" data-bs-toggle="modal" data-bs-target="#exampleModal"><strong>Bravo,</strong> <strong><%= @replacements.size %></strong> fratés de ta région sont chauds pour te remplacer 🎉</p>
    </div>

    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <% if @replacements.nil? %>
        <p><strong>You have 0 replacement</strong></p>
      <%else %>
      <% @replacements.each do |user, replacements| %>
          <p class="home-card" data-bs-toggle="modal" data-bs-target="#exampleModal"><strong>Bravo</strong> <strong><%= user.first_name.capitalize %></strong> a acceptée votre demande </p>
        <% end %>
      <%end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>

  <div>
      <div>
    <div class="home-card card-trans"><strong>Transmissions</strong> 📝 - IDE / Patient : transmissions</div>
    </div>
  </div>

  <div>
    <p class="home-card card-actu"><strong>Actualités</strong> 📰 - #Channel</p>
  </div>

  <div>
    <p class="home-card card-msg"><strong>Message</strong> 📩 - IDE vous a envoyé un message</p>
  </div>

  <% else %>
    <%= link_to "Login", new_user_session_path %>
  <% end %>
