<h1>Patients</h1>
<div class= "action-buttons">
  <a href="#" class="card-actions" id="tr">Transmissions</a>
  <a href="#" class="card-actions">+</a>
</div>
<div class="cards">
  <% @patients.each do |patient| %>
    <%= link_to patient_path(patient) do %>
      <div class="card-patient-infos">
        <div>
        <%= patient.display_confidential_name %>
        </div>
        <p><%= patient.age %> ans</p>
      </div>
    <% end %>
  <% end %>
</div>
